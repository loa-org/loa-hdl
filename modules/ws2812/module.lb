
def init(module):
	module.name = "ws2812"

def prepare(module, options):
	module.add_option(BooleanOption(
		name="testbench",
		description="Generate testbench",
		default = False))
	return True

def build(env):
	env.copy('hdl', 'hdl')
	if env["::testbench"] == True:
			env.copy('tb', "tb/ws2812")
			env.copy('../makefile.ghdl.mk', "tb/ws2812")
