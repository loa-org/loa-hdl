
def init(module):
	module.name = "ds18b20"

def prepare(module, options):
	module.depends("loa-hdl:onewire")

	module.add_option(BooleanOption(
		name="testbench",
		description="Generate testbench",
		default = False))
	return True

def build(env):
	env.copy('hdl', 'hdl')
	if env["::testbench"] == True:
			env.copy('tb', "tb/ds18b20")
			env.copy('../makefile.ghdl.mk', "tb/ds18b20")
